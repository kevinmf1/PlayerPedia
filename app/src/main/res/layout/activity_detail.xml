<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main"
        android:paddingBottom="30dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:elevation="2dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/test1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_player_name"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_player"
            tools:text="Kevin De Bruyne" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_rating"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_player_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_rating"
            app:layout_constraintEnd_toEndOf="@+id/iv_rating"
            app:layout_constraintStart_toStartOf="@+id/iv_rating"
            app:layout_constraintTop_toTopOf="@+id/iv_rating"
            tools:text="4.7" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_player_active"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_name"
            tools:text="Retired Player" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_player_club"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_active"
            tools:text="Manchester City" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_player_position"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_club"
            tools:text="AMF/CMF" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_goal_assist"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_position"
            tools:text="@string/goals_assists" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_player_description"
            style="@style/MediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_goal_assist"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis nec odio magna. Fusce vel condimentum lacus. Suspendisse eget ullamcorper neque. Donec maximus, magna eu cursus sollicitudin, erat quam dapibus leo, et dapibus sapien metus et augue. Aliquam posuere cursus diam commodo scelerisque. Aliquam at turpis volutpat, feugiat nulla a, ornare est. Praesent sodales magna eget dapibus fermentum. Phasellus sit amet tortor eu magna rhoncus mollis non a massa. In sit amet finibus metus. In et mollis mauris. Curabitur nunc quam, feugiat et orci et, porttitor vulputate justo. Aenean interdum eu tellus et euismod." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_btn"
            android:text="@string/search_btn_text"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/tv_player_description"
            app:layout_constraintStart_toStartOf="@+id/tv_player_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>